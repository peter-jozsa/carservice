    <modelVersion>4.0.0</modelVersion>

    <groupId>hu.unideb.inf.lev</groupId>
    <artifactId>carservice</artifactId>
    <version>1.0</version>

    <name>CarService</name>
    <description>Egy alkalmazás amely egy szerelő műhely egyszerűsített munkafolyamatait szolgálja ki.</description>

    <properties>
        <mainClass>hu.unideb.inf.lev.carservice.app.MainApp</mainClass>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.outputEncoding>UTF-8</project.build.outputEncoding>

        <connection>scm:git:git://github.com/psychoo118/carservice.git</connection>
        <developerConnection>scm:git:git://github.com/psychoo118/carservice.git</developerConnection>
    </scm>
    <issueManagement>
        <url>https://github.com/psychoo118/carservice/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>
    <licenses>
        <license>
            <name>GNU General Public License V3.0</name>
